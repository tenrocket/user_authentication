.container-full
  .row
    .col-lg-12.text-center.v-center
      %h1 UserTest
      %p.lead Register now and see what you can do.
      %br/
      %br/
      %br/
      .col-lg-12.center-block
        .form-group{style: "width:340px;text-align:center;margin:0 auto;"}
          = form_for @user, url: users_path do |f|
            .form-group
              = f.label :email, class: "control-label"
              = f.text_field :email, :class => "form-control input-lg"
            .form-group
              = f.label :password, class: "control-label"
              = f.password_field :password, class: "form-control input-lg"
            .form-group
              = f.label :password_confirmation, class: "control-label"
              = f.password_field :password_confirmation, class: "form-control input-lg"
            %br
            %br
            .actions
              .form-group
                = f.submit "Register", :class => "normal", id: "register"